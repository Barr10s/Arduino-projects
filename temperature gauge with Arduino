int Temperatura = 27;

void setup() {
  Serial.begin (9600);}

void loop() {
  Serial.print ("Temperatura: ");
  Serial.print (Temperatura);
  Serial.print (" - Observacao: ");
  if (Temperatura <= 15){
    Serial.println ("FRIO");
  }else if (Temperatura > 15 && Temperatura <= 30){
    Serial.println ("INTERMEDIARIA");
    } else if (Temperatura > 30 && Temperatura <= 45){
    Serial.println ("QUENTE");
    }
  delay(1500);
  }
